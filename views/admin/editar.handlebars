{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card text-center">
    <H3>Editar usuario {{data.dataValues.nome}}</H3>
    <div class="card-body text-left">

        <form action="/admin/usuarios/editar/{{data.dataValues.ID}}" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control" value="{{data.dataValues.nome}}">
            <br>
            <label for="idade">Idade:</label>
            <input type="number" name="idade" class="form-control" value="{{data.dataValues.idade}}">
            <br>
            <label for="email">Email:</label>
            <input type="text" name="email" class="form-control" value="{{data.dataValues.email}}">
            <br>
            <label for="usuario">Usuario:</label>
            <input type="text" name="usuario" class="form-control" value="{{data.dataValues.usuario}}">
            <br>
            <label for="senha">Senha:</label>
            <input type="password" name="senha" class="form-control" value="{{data.dataValues.senha}}">
            <br>
            <div class="col align-self-end" style="text-align: right;">
                <a name="" id="btnGroupAddon2" class="btn btn-danger" href="/admin/usuarios/" role="button">Cancelar</a>
                <button type="submit" class="btn btn-success">Enviar</button>
            </div>
        </form>

    </div>
</div>
