    <h3>Prazo encerrado</h3>
    <hr>
    <div class="text-left">
        <a class="btn btn-outline-primary btn-sm text-left" data-toggle="collapse" href="#encerrados" role="button"
            aria-expanded="false" aria-controls="encerrados">
            Exibir
        </a>
    </div>
    <div class=" card-body collapse" id="encerrados">
        {{#each noticias}}
        {{#if dataValues.dataFinal}}
        <div class="card text-white  mt-3 ">
            <div class="card text-dark">
                <!--Titulo-->
                <div class="card-header bg-dark text-white">
                    <div class="row">
                        <h2 class="col-10 text-left">{{dataValues.titulo}}</h2>
                        <div class="text-right">
                            <a class="btn btn-outline-primary btn-sm text-right" data-toggle="collapse"
                                href="#anotacao_{{dataValues.ID}}" role="button" aria-expanded="false"
                                aria-controls="anotacao_{{dataValues.ID}}">
                                Expandir
                            </a>
                        </div>
                    </div>
                </div>
                <!--Conteudo-->
                <div class=" card-body collapse" id="anotacao_{{dataValues.ID}}"><br>
                    <div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;"
                        id="content{{dataValues.ID}}">
                    </div>

                    <script>
                        var text = `{{{dataValues.conteudo}}}`
                        document.getElementById('content{{dataValues.ID}}').innerHTML =
                            marked(text);
                    </script>
                    <br>
                    <a href="/Usuario/Anotacoes/deletar/{{dataValues.ID}}">
                        <button class="btn btn-danger">Deletar</button></a>
                    <!--Editar-->
                    <a href="/Usuario/Anotacoes/editar/{{dataValues.ID}}">
                        <button class="btn btn-primary">Editar</button></a>

                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-10 text-left">
                            Termina em: {{dataValues.dataFinal}}
                        </div>
                        <div class="text-right">
                            Criado em: {{dataValues.dataCriacao}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        {{/if}}
        {{/each}}
    </div>
</div>
