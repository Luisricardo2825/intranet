<div class="container">
    <div class="card text-white bg-black mt-4">
        <div class="card-body">
            <h2>Suas postagens</h2>
        </div>

    </div>
</div>
<div class="container">

    <!--Titulo da pagina-->
    <div class="container mt-5">
    </div>

    <!--Corpo da pagina-->
    <hr>
    <div class="container mt-1">
        <a href="/Usuario/Marketing/Noticia/nova">
            <button class="btn btn-success">Nova postagem</button></a>
    </div>
    <br>
    <!--PendÃªncias-->
    <h3>Prazo vigente</h3>
    <hr>
    <div class="row border-0">
        {{#each noticias}}
        <div class="card text-white mt-3 border-0 ">
            <div class="card text-dark">
                <!--Titulo-->
                <div class="card-header bg-dark text-white">
                    <div class="row">
                        <h3 class="col-11 text-left" id="title">{{#ShortTitle dataValues.titulo}}{{/ShortTitle}}</h3>
                        <div class="text-right">
                            <a class="btn btn-outline-primary btn-sm text-right" data-toggle="collapse"
                                href="#anotacao_{{dataValues.ID}}" role="button" aria-expanded="false"
                                aria-controls="anotacao_{{dataValues.ID}}">
                                Expandir
                            </a>
                        </div>
                    </div>
                </div>
                <!--Conteudo-->
                <div class=" card-body collapse" id="anotacao_{{dataValues.ID}}">
                    <div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;"
                        id="content{{dataValues.ID}}">
                    </div>

                    <script>
                        var text = `{{{dataValues.conteudo}}}`
                        document.getElementById('content{{dataValues.ID}}').innerHTML =
                            marked(text);

                    </script>
                    <br>
                    <a href="/Usuario/Marketing/Noticia/deletar/{{dataValues.ID}}">
                        <button class="btn btn-danger">Deletar</button></a>
                    <!--Editar-->
                    <a href="/Usuario/Marketing/Noticia/editar/{{dataValues.ID}}">
                        <button class="btn btn-primary">Editar</button></a>

                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-10 text-left">
                            {{#if dataValues.dataFinal}}
                            Termina em: {{dataValues.dataFinal}}

                            {{else}}
                            Termina em: Indefinido

                            {{/if}}

                        </div>
                        <div class="text-right">
                            Criado em: {{dataValues.dataCriacao}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        {{/each}}
    </div>
    <br>
    <br>

