<div class="container col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xl-8">

    <div id="message">
        {{#each erros}}
        <div>
            <div class="alert alert-danger alert-dismissible fade show float-lg-none" disabled role="alert">
                {{texto}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        {{else}}
        {{/each}}
    </div>
    {{#with memory}}
    <div class="card text-center">
        <H3>Cadastro</H3>
        <div class="card-body text-left">

            <form action="/registrar" method="POST">
                <label for="nome">Nome:</label>
                <input type="text" name="nome" class="form-control" value="{{nome}}">
                <br>
                <label for="email">Email:</label>
                <input type="text" name="email" class="form-control" value="{{email}}">
                <br>
                <label for="usuario">Usuario:</label>
                <input type="text" name="usuario" class="form-control" value="{{usuario}}">
                <br>
                <label for="senha">Senha:</label>
                <input type="password" name="senha" class="form-control" value="{{senha}}">
                <br>
                <label for="senha">Repita sua senha:</label>
                <input type="password" name="senha2" class="form-control" value="{{senha}}">
                <br>
                <div class="col align-self-end" style="text-align: right;">
                    <a name="" id="btnGroupAddon2" class="btn btn-danger" href="/" role="button">Cancelar</a>
                    <button type="submit" class="btn btn-success">Enviar</button>
                </div>
            </form>
        </div>
    </div>
    {{else}}
    <div class="card text-center">
        <div class="card-header bg-dark text-white text-left">
            <H3>Registrar-se</H3>
        </div>
        <div class="card-body text-left">

            <form action="/registrar" method="POST">
                <label for="nome">Nome:</label>
                <input type="text" name="nome" class="form-control" value="{{texto}}">
                <br>
                <label for="email">Email:</label>
                <input type="text" name="email" class="form-control" value="{{dataValues.email}}">
                <br>
                <label for="usuario">Usuario:</label>
                <input type="text" name="usuario" class="form-control" value="{{dataValues.usuario}}">
                <br>
                <label for="senha">Senha:</label>
                <input type="password" name="senha" class="form-control" value="{{dataValues.senha}}">
                <br>
                <label for="senha">Repita sua senha:</label>
                <input type="password" name="senha2" class="form-control" value="{{senha}}">
                <br>
                <div class="col align-self-end" style="text-align: right;">
                    <a name="" id="btnGroupAddon2" class="btn btn-danger" href="/" role="button">Cancelar</a>
                    <button type="submit" class="btn btn-success">Enviar</button>
                </div>
            </form>

        </div>
    </div>
    {{/with}}
</div>
