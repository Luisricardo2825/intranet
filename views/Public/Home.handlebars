<div class="container col-12 mt-5">
    <div class="row">
        <div class="col-1 bg-white ">

        </div>
        <div class="col-9 card text-dark ">
            {{#each noticias}}

            {{#if (isOne dataValues.Destaque)}}


            <!--Titulo-->
            <div class="card-header bg-dark text-white">
                <div class="row">
                    <h2 class="col-11 text-left">{{dataValues.titulo}}</h2>
                </div>
            </div>

            <!--Conteudo-->
            <p style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;"
                id="content{{dataValues.ID}}">
            </p>
            <br>
            <script>
                var text = `{{{dataValues.conteudo}}}`
                document.getElementById('content{{dataValues.ID}}').innerHTML =
                    marked(text);
                text = ""
            </script>
            <div class="card-footer text-muted">
                <div class="row">
                    <div class="text-right">
                        Criado em: {{dataValues.dataCriacao}}
                    </div>
                </div>
            </div>
            {{else}}

            {{/if}}

            {{/each}}
        </div>

        <!--Noticias nÃ£o destacadas-->
        <div class="container col-2">
            {{#each noticias}}
            <div class="card-body mt-1 bg-primary text-white">
                <!--Conteudo-->
                <p style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;"
                    id="conteudo{{dataValues.ID}}">
                </p>
                <br>
                <script>
                    var text = `{{#TakeHalf dataValues.conteudo}}{{/TakeHalf}}`
                    document.getElementById('conteudo{{dataValues.ID}}').innerHTML =
                        marked(text);
                    text = ""
                </script>
                <a href="/Usuario/Marketing/Noticia/{{dataValues.ID}}">
                    <button class="btn btn-dark btn-sm">Mais detalhes</button></a>
            </div>
            {{/each}}
        </div>


    </div>
</div>
