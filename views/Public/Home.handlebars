<div class="container col-12 mt-5 bg-black">
    <div id="carouselExampleCaptions" class="carousel slide bg-black" data-ride="carousel">

        <ol class="carousel-indicators">
            {{#each noticias}}
            {{#if (is1 dataValues.Destaque)}}
            {{#if @first}}
            <li data-target="#carouselExampleCaptions" data-slide-to="{{dataValues.ID}}" class="active"></li>
            {{else}}
            <li data-target="#carouselExampleCaptions" data-slide-to="{{dataValues.ID}}"></li>
            {{/if}}
            {{/if}}
            {{/each}}
        </ol>
        <div class="carousel-inner">
            {{#each noticias}}
            {{#if (is1 dataValues.Destaque)}}
            {{#if @first}}
            <div class="carousel-item active">

                <div class="container bg-black mb-5">
                    <div class="card-body">
                        <div class="container col-3">
                            <img src="/IMG/logo-Nav.png" class="rounded" alt="...">
                        </div>
                    </div>
                </div>
                <br>
                <br>
                <br>
                <br>
                <br>
                <a href="/Usuario/Marketing/Noticia/{{dataValues.ID}}">
                    <div class="carousel-caption mt-5">
                        <h5>{{dataValues.titulo}}</h5>
                        <p>{{#TakePara dataValues.conteudo}}{{/TakePara}}</p>
                    </div>
                </a>
            </div>
            {{/if}}
            {{#unless @first}}
            <div class="carousel-item">
                <div class="container bg-black mb-5">
                    <div class="card-body">
                        <div class="container col-3">
                            <img src="/IMG/logo-Nav.png" class="rounded" alt="...">
                        </div>
                    </div>
                </div>
                <br>
                <br>
                <br>
                <br>
                <br>
                <a href="/Usuario/Marketing/Noticia/{{dataValues.ID}}">
                    <div class="carousel-caption mt-5">
                        <h5>{{dataValues.titulo}}</h5>
                        <p>{{#TakePara dataValues.conteudo}}{{/TakePara}}</p>
                    </div>
                </a>
            </div>
            {{/unless}}
            {{/if}}
            {{/each}}

        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!--Principais-->
<div class="container col-12 mt-5">
    <div class="row ml-4">

        <div class="col-10">
            {{#each noticias}}

            {{#if (is2 dataValues.Destaque)}}


            <!--Titulo-->
            <div class="card-header bg-dark text-white">
                <div class="row">
                    <h2 class="col-11 text-left">{{dataValues.titulo}}</h2>
                </div>
            </div>

            <!--Conteudo-->
            <p style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;"
                id="content{{dataValues.ID}}">
            </p>
            <br>
            <script>
                var text = `{{{dataValues.conteudo}}}`
                document.getElementById('content{{dataValues.ID}}').innerHTML =
                    marked(text);
                text = ""
            </script>
            <div class="card-footer text-muted">
                <div class="row">
                    <div class="text-right">
                        Criado em: {{dataValues.dataCriacao}}
                    </div>
                </div>
            </div>
            {{else}}

            {{/if}}

            {{/each}}
        </div>

        <!--****************************************************************************************************************-->
        <!--****************************************************************************************************************-->
        <!--****************************************************************************************************************-->
        <!--Noticias nÃ£o destacadas-->
        <div class="container col-2">
            {{#each noticias}}
            {{#if (is3 dataValues.Destaque)}}
            <div class="card-deck">
                <div class="card-body mt-1 bg-black text-white">
                    <!--Conteudo-->
                    <p style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;">
                    <h4>{{#TakeHalf dataValues.titulo}}{{/TakeHalf}}</h4>
                    </p>
                    <br>
                    <a href="/Usuario/Marketing/Noticia/{{dataValues.ID}}">
                        <button class="btn btn-light text-white btn-sm"><b>Mais detalhes</b></button></a>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>


    </div>
</div>
