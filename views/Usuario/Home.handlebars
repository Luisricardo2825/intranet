<div class="container">
    <div class="card text-white bg-black mt-4">
        <div class="card-body">
            <h2>Sou a pagina de pendencias do {{usuario.nome}}</h2>
        </div>

    </div>
</div>
<div class="container">

    <!--Titulo da pagina-->
    <div class="container mt-5">
    </div>

    <!--Corpo da pagina-->
    <hr>
    <div class="container mt-1">
        <a href="/Usuario/Anotacoes/nova">
            <button class="btn btn-success">Nova anotação</button></a>
    </div>
    <br>
    <!--Pendências-->
    <h3>A fazer</h3>
    <hr>
    {{#each agenda}}
    {{#unless dataValues.FinalizadoPor}}
    <div class="card text-white  mt-3 ">
        <div class="card text-dark">
            <!--Titulo-->
            <div class="card-header bg-dark text-white">
                <div class="row">
                    <h2 class="col-11 text-left">{{dataValues.titulo}}</h2>
                    <div class="text-right">
                        <a class="btn btn-outline-primary btn-sm text-right" data-toggle="collapse"
                            href="#anotacao_{{dataValues.ID}}" role="button" aria-expanded="false"
                            aria-controls="anotacao_{{dataValues.ID}}">
                            Expandir
                        </a>
                    </div>
                </div>
            </div>
            <!--Conteudo-->
            <div class=" card-body collapse" id="anotacao_{{dataValues.ID}}"><br>
                <div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;"
                    id="content{{dataValues.ID}}">
                </div>

                <script>
                    var text = `{{{dataValues.conteudo}}}`
                    document.getElementById('content{{dataValues.ID}}').innerHTML =
                        marked(text);
                </script>
                <br>
                <a href="/Usuario/Anotacoes/deletar/{{dataValues.ID}}">
                    <button class="btn btn-danger">Deletar</button></a>
                <!--Editar-->
                <a href="/Usuario/Anotacoes/editar/{{dataValues.ID}}">
                    <button class="btn btn-primary">Editar</button></a>

            </div>
            <div class="card-footer text-muted">
                <div class="row">
                    <div class="col-10 text-left">
                        Termina em: {{dataValues.dataFin}}
                    </div>
                    <div class="text-right">
                        Criado em: {{dataValues.dataCriacao}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{else}}

    {{/unless }}

    {{/each}}
    <br>
    <br>
    <h3>Prazo encerrado</h3>
    <hr>
    <div class="text-left">
        <a class="btn btn-outline-primary btn-sm text-left" data-toggle="collapse" href="#encerrados" role="button"
            aria-expanded="false" aria-controls="encerrados">
            Exibir
        </a>
    </div>

    <div class=" card-body collapse" id="encerrados">
        {{#each agenda}}
        {{#if dataValues.FinalizadoPor}}
        <div class="card text-white  mt-3 ">
            <div class="card text-dark">
                <!--Titulo-->
                <div class="card-header bg-dark text-white">
                    <div class="row">
                        <h2 class="col-10 text-left">{{dataValues.titulo}}</h2>
                        <div class="text-right">
                            <a class="btn btn-outline-primary btn-sm text-right" data-toggle="collapse"
                                href="#anotacao_{{dataValues.ID}}" role="button" aria-expanded="false"
                                aria-controls="anotacao_{{dataValues.ID}}">
                                Expandir
                            </a>
                            <a href="/Usuario/Anotacoes/editar/{{dataValues.ID}}_fin">
                                <button class="btn btn-outline-success btn-sm">Encerrar</button></a>
                        </div>
                    </div>
                </div>
                <!--Conteudo-->
                <div class=" card-body collapse" id="anotacao_{{dataValues.ID}}"><br>
                    <div style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: medium;"
                        id="content{{dataValues.ID}}">
                    </div>

                    <script>
                        var text = `{{{dataValues.conteudo}}}`
                        document.getElementById('content{{dataValues.ID}}').innerHTML =
                            marked(text);
                    </script>
                    <br>
                    <a href="/Usuario/Anotacoes/deletar/{{dataValues.ID}}">
                        <button class="btn btn-danger">Deletar</button></a>
                    <!--Editar-->
                    <a href="/Usuario/Anotacoes/editar/{{dataValues.ID}}">
                        <button class="btn btn-primary">Editar</button></a>

                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-10 text-left">
                            Termina em: {{dataValues.dataFin}}
                        </div>
                        <div class="text-right">
                            Criado em: {{dataValues.dataCriacao}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        {{/if}}
        {{/each}}
    </div>
</div>
