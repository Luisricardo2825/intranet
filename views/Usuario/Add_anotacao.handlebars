<div class="container">
    <div class="card text-center mt-5">

        <div class="card-header bg-dark text-white text-left">
            <H3>Adicionar pendencia</H3>
        </div>
        <div class="card-body text-left">

            <form action="/Usuario/Anotacoes/nova" method="POST">

                <!--TÃ­tulo-->
                <label for="nome">Titulo:</label>
                <input type="text" name="titulo" class="form-control">
                <br>
                <!--Conteudo-->
                <label for="conteudo">Conteudo:</label>
                <div class="input-group">
                    <textarea name="conteudo" class="form-control" aria-label="With textarea"
                        style="resize: none; height: 200px;">{{data.dataValues.conteudo}}</textarea>
                </div>
                <br>
                <!--Data Final-->
                <label for="dataFin">Data Final:</label>
                <input type="date" name="dataFin" class="form-control" value="{{data.dataValues.dataFin}}">
                <br>
                <div class="col align-self-end" style="text-align: right;">
                    <a name="cancelar" id="btnGroupAddon2" class="btn btn-danger" href="/Usuario/Home"
                        role="button">Cancelar</a>
                    <button type="submit" class="btn btn-success">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>
